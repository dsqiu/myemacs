#name : /* makeexec */ 
# --
CC = gcc
CXX = g++
TARGET = $0
OBJS=$1
C_FLAGS += -g -Wall
LIB_FLAGS = -pthread
all: $(TARGET)
$(TARGET): $(OBJS)
    $(CXX) -o $@ $^ $(LIB_FLAGS) $(LIB) $(C_FLAGS)

.cpp.o:
    $(CXX) -c -o $*.o $(INC) $(C_FLAGS) $*.cpp
.cc.o:
    $(CC) -c -o $*.o $(INC) $(C_FLAGS) $*.cc
clean:
    -rm -f *.o $(TARGET)
